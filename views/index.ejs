    <script src="https://kit.fontawesome.com/9ad1db3f87.js" crossorigin="anonymous"></script>
   <script>



    const curdate= document.getElementById('date')
    let weathercon = document.getElementById("weathercon");
    const tempstatus = "clouds";



    const currentday = ()=>{
      const weekday = ["SUNDAY","MONDAY","TUESDAY","WEDNESDAY","THURSDAY","FRIDAY","SATURDAY"];



      let currentdate = new Date();
      let day =weekday[currentdate.getDay()];
      return day;
    };





   const currenttime = ()=>{
    const aLLmonths = ["JAN","FEB","MAR","APR","MAY","JUNE","JULY","AUG","SEP","OCT","NOV","DEC"];
  
    var dateObj = new Date();
var month = aLLmonths [dateObj.getUTCMonth() ]; //months from 1-12
var date = dateObj.getUTCDate();

let hours = dateObj.getHours();
let min = dateObj.getMinutes();

let periods ="AM";
if(hours>11){
  periods="PM";
  // -=12 if hours is greater than 12 than it will count from 1-10 not more than 12
  if (hours>12)hours-=12; 
    }
if (min<10) {
  min= "0"+min;
  
}
// using template literlas
return `${month} ${date} `+ ` || ` +`${hours} : ${min}${periods}`

   }  

   curdate.innerHTML = currentday() + " " +"||" + currenttime();

 
   </script>
